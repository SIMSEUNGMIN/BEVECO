<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AppController.MainActivity">

    <TextView
        android:id="@+id/string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="62dp"
        android:text="원하는 메뉴를 클릭하세요"
        android:textSize="30dp"
        android:layout_centerInParent="true"
        />

    <ImageButton
        android:id="@+id/image_button1_shortPath"
        android:layout_width="wrap_content"
        android:layout_height="152dp"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:padding="0dp"
        android:src="@drawable/route_button" />

    <ImageButton
        android:id="@+id/image_button2_hotel"
        android:layout_width="wrap_content"
        android:layout_height="152dp"
        android:padding="0dp"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="230dp"
        android:layout_marginRight="30dp"
        android:src="@drawable/hotel_button" />

    <ImageButton
        android:id="@+id/image_button3_tour"
        android:layout_width="wrap_content"
        android:layout_height="152dp"
        android:padding="0dp"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:src="@drawable/tour_button" />

    <ImageButton
        android:id="@+id/image_button4_food"
        android:layout_width="wrap_content"
        android:layout_height="152dp"
        android:padding="0dp"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="230dp"
        android:layout_marginRight="30dp"
        android:src="@drawable/food_button" />



</RelativeLayout>